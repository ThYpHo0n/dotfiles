font-family = "Hack Nerd Font Mono"
font-size = 14

# Transparency (The classic iTerm look)
background-opacity = 0.93
#background-blur-radius = 20

# Theme
# Run 'ghostty +list-themes' in terminal to see options
theme = iTerm2 Default

# Match iTerm2's cyan / bright cyan
palette = 0=#14191E
palette = 1=#B43C2A
palette = 2=#00C200
palette = 3=#C7C400
palette = 4=#2744C7
palette = 5=#C040BE
palette = 6=#00C5C7
palette = 7=#C7C7C7
palette = 8=#686868
palette = 9=#DD7975
palette = 10=#58E790
palette = 11=#ECE100
palette = 12=#A7ABF2
palette = 13=#E17EE1
palette = 14=#60FDFF
palette = 15=#FFFFFF


focus-follows-mouse = true

x11-instance-name = ghostty

mouse-scroll-multiplier = 6

keybind = ctrl+v=paste_from_clipboard
# --- Window & Pane Management (iTerm2 Style) ---
keybind = ctrl+shift+w=close_tab
keybind = ctrl+w=close_surface
keybind = ctrl+t=new_tab
keybind = ctrl+alt+right=new_split:right
keybind = ctrl+alt+left=new_split:left
keybind = ctrl+alt+up=new_split:up
keybind = ctrl+alt+down=new_split:down

# --- Navigation ---
keybind = ctrl+left=goto_split:previous
keybind = ctrl+right=goto_split:next
keybind = ctrl+1=goto_tab:1
keybind = ctrl+2=goto_tab:2
keybind = ctrl+3=goto_tab:3

# --- Text Selection (iTerm2 'Natural Text Editing') ---
# Jump words
keybind = ctrl+left=text:\x1bb
keybind = ctrl+right=text:\x1bf
# Delete word
keybind = ctrl+backspace=text:\x17
# Delete line
keybind = ctrl+shift+backspace=text:\x15
